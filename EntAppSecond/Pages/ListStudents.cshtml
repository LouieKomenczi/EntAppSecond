@page
@model EntAppSecond.Pages.ListStudentsModel
@{
    ViewData["Title"] = "ListStudents";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Detail</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model.Students)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Email</td>

                <td><a asp-page="StudentDetails" asp-route-StudentID="@student.StudentID" class="btn btn-info"> Open Details </a></td>
            </tr>
        }
    </tbody>
</table>

