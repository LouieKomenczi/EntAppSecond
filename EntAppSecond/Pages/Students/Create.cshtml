@page
@model EntAppSecond.Pages.Students.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>

    <link href="~/css/student.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for=Student.FirstName></label>
            <input asp-for=Student.FirstName />
        </div>

        <div>
            <label asp-for=Student.LastName></label>
            <input asp-for=Student.LastName />
        </div>

        <div>
            <label asp-for=Student.StudentID></label>
            <input asp-for=Student.StudentID placeholder="S12345678" />
        </div>

        <div>
            <label asp-for=Student.Dob></label>
            <input asp-for=Student.Dob placeholder="01/01/1980" />
        </div>

        <div>
            <label asp-for=Student.NumberOfModule></label>
            <input asp-for=Student.NumberOfModule />
        </div>

        <div>
            <label asp-for=Student.Height></label>
            <input asp-for=Student.Height />
        </div>

        <div>
            <label asp-for=Student.Email></label>
            <input asp-for=Student.Email />
        </div>

        <div>
            <label asp-for=Student.EmailConfirm></label>
            <input asp-for=Student.EmailConfirm />
        </div>

        <div>
            <label asp-for=Student.GraduationCohort></label>
            <input asp-for=Student.GraduationCohort />
            @*<span asp-validation-for="Student.GraduationCohort"></span>*@
        </div>

        <button type="submit" class="btn btn-primary">Register Student</button>
    </form>
</body>
</html>
