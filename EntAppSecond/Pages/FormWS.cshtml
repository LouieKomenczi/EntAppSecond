@page
@model EntAppSecond.Pages.FormWSModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "FormWS";
}

<h2>FormWS</h2>

<form method="post">
    <div class="form-group">
        <input asp-for=ProductCode placeholder="Product Code">
        <label asp-for=ProductCode> Product Code </label>
    </div>    
    <div class="radio">
        @for (int i = 0; i < Model.Color.Length; i++)
        {
        <label>
            <input type="radio" asp-for=Color value=ColorSelected[i]>@Model.Color[i]
        </label>
        }
    </div>
    <div class="checkbox">
        <label><input type="checkbox" asp-for=ConsentSelected value=ConsentSelected> I consent to everything.</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

